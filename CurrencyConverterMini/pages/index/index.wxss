/* 容器 */
.container {
  padding: 20px;
  background: var(--bg-primary);
  min-height: 100vh;
}

/* 标题区域 */
.header {
  margin-bottom: 30px;
  text-align: center;
}

.title {
  font-size: 24px;
  color: var(--text-primary);
  font-weight: 600;
}

.subtitle {
  font-size: 14px;
  color: var(--text-secondary);
  margin-top: 8px;
}

/* 货币选择区 */
.currency-selector {
  background: var(--bg-secondary);
  padding: 20px;
  border-radius: 12px;
  margin-bottom: 20px;
}

.selector-label {
  font-size: 14px;
  color: var(--text-secondary);
  margin-bottom: 8px;
}

.selector {
  width: 100%;
  height: 44px;
  background: var(--bg-primary);
  border-radius: 8px;
  padding: 0 12px;
  margin-bottom: 16px;
}

/* 金额输入区 */
.amount-input {
  position: relative;
  margin-bottom: 30px;
}

.input {
  width: 100%;
  height: 60px;
  background: var(--bg-secondary);
  border-radius: 12px;
  padding: 0 20px;
  font-size: 24px;
  color: var(--text-primary);
}

.currency-symbol {
  position: absolute;
  right: 20px;
  top: 50%;
  transform: translateY(-50%);
  color: var(--text-secondary);
}

/* 结果显示区 */
.results {
  background: var(--bg-secondary);
  border-radius: 12px;
  padding: 20px;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px 0;
  border-bottom: 1px solid rgba(0,0,0,0.05);
}

.result-item:last-child {
  border-bottom: none;
}

.currency-name {
  font-size: 16px;
  color: var(--text-primary);
}

.result-value {
  font-size: 20px;
  color: var(--primary-color);
  font-weight: 600;
}

/* 底部信息 */
.footer {
  margin-top: 30px;
  text-align: center;
  color: var(--text-secondary);
  font-size: 12px;
}

/* 刷新按钮 */
.refresh-btn {
  width: 100%;
  height: 44px;
  background: var(--primary-color);
  color: white;
  border-radius: 22px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20px;
}

/* 加载动画 */
.loading {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* 响应式适配 */
@media screen and (min-width: 768px) {
  .container {
    max-width: 600px;
    margin: 0 auto;
  }
} 