/* 自定义导航栏 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: #fff;
  z-index: 100;
  padding-top: calc(env(safe-area-inset-top) + 44px); /* 状态栏高度 + 导航栏高度 */
}

.nav-content {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-bottom: 10px;
}

.nav-title {
  font-size: 56rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #1a73e8 0%, #3f51b5 100%);
  -webkit-background-clip: text;
  color: transparent;
  letter-spacing: -0.5px;
}

/* 页面容器 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(145deg, #f6f8ff 0%, #ffffff 100%);
  padding: 20rpx 30rpx;
  padding-top: calc(env(safe-area-inset-top) + 88px + 20rpx); /* 状态栏 + 导航栏 + 间距 */
  box-sizing: border-box;
}

/* 头部样式 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
  animation: fadeIn 0.8s ease-out;
}

.subtitle {
  font-size: 28rpx;
  color: #5f6368;
  display: block;
  letter-spacing: 0.2px;
}

/* 转换卡片样式 */
.converter-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.08),
              0 2rpx 6rpx rgba(0, 0, 0, 0.03);
  margin-bottom: 40rpx;
  animation: slideUp 0.6s ease-out;
  border: 1px solid rgba(230, 230, 230, 0.7);
}

/* 货币区域样式 */
.currency-section {
  margin-bottom: 36rpx;
  transition: all 0.3s ease;
}

.currency-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.currency-header text:first-child {
  font-size: 28rpx;
  color: #5f6368;
  font-weight: 500;
}

.currency-picker {
  display: flex;
  align-items: center;
  background: #f8f9fd;
  padding: 16rpx 28rpx;
  border-radius: 20rpx;
  border: 1px solid rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.currency-picker:active {
  background: #f0f3f9;
  transform: scale(0.98);
}

.currency-picker text {
  font-size: 30rpx;
  color: #202124;
  font-weight: 500;
}

/* 输入框样式 */
.input-section {
  background: #f8f9fd;
  border-radius: 20rpx;
  padding: 28rpx;
  border: 1px solid rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.input-section:focus-within {
  border-color: #1a73e8;
  box-shadow: 0 0 0 2px rgba(26, 115, 232, 0.1);
}

.amount-input {
  font-size: 44rpx;
  color: #202124;
  font-weight: 600;
}

/* 交换按钮样式 */
.exchange-button {
  width: 88rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #1a73e8 0%, #3f51b5 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 24rpx auto;
  box-shadow: 0 8rpx 24rpx rgba(26, 115, 232, 0.25);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  z-index: 1;
}

.exchange-button:active {
  transform: scale(0.92) rotate(180deg);
  box-shadow: 0 4rpx 12rpx rgba(26, 115, 232, 0.2);
}

.exchange-button text {
  color: #ffffff;
  font-size: 44rpx;
}

/* 结果区域样式 */
.result-section {
  background: #f8f9fd;
  border-radius: 20rpx;
  padding: 28rpx;
  border: 1px solid rgba(0, 0, 0, 0.06);
  position: relative;
  overflow: hidden;
}

.result-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2px;
  background: linear-gradient(90deg, #1a73e8, #3f51b5);
  opacity: 0.8;
}

.converted-amount {
  font-size: 44rpx;
  color: #202124;
  font-weight: 700;
  display: block;
  margin-bottom: 12rpx;
}

.rate-info {
  font-size: 26rpx;
  color: #5f6368;
  font-weight: 500;
}

/* 热门货币转换区域 */
.popular-currencies {
  margin-top: 60rpx;
  animation: fadeIn 1s ease-out;
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #202124;
  margin-bottom: 30rpx;
  display: block;
  letter-spacing: -0.3px;
}

.currency-grid {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  gap: 24rpx;
}

.currency-item {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  padding: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
  border: 1px solid rgba(230, 230, 230, 0.7);
  transition: all 0.3s ease;
}

.currency-item:active {
  transform: scale(0.98);
  background: #f8f9fd;
}

.currency-amount, .currency-converted {
  font-size: 30rpx;
  color: #202124;
  font-weight: 500;
}

/* 最后更新时间 */
.last-updated {
  text-align: center;
  margin-top: 48rpx;
  opacity: 0.8;
}

.last-updated text {
  font-size: 24rpx;
  color: #5f6368;
  letter-spacing: 0.2px;
}

/* 动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 图标字体 */
@font-face {
  font-family: 'iconfont';
  src: url('data:font/woff2;charset=utf-8;base64,') format('woff2');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 32rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-arrow-down:before {
  content: "\e6eb";
}

.icon-arrow-right:before {
  content: "\e6ec";
}

.icon-exchange:before {
  content: "\e6ee";
}