/* 页面容器 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(145deg, #f6f8ff 0%, #ffffff 100%);
  padding: 0 30rpx;
  padding-top: 160rpx;
  padding: 20rpx 30rpx;
  padding-top: calc(env(safe-area-inset-top) + 88px + 20rpx);
  box-sizing: border-box;
}

/* 自定义导航栏 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: #fff;
  z-index: 100;
  padding-top: env(safe-area-inset-top) ;
  padding-top: calc(env(safe-area-inset-top) + 44px);
}

.nav-content {
  position: relative;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx;
}

/* 返回图标 */
.back-icon {
  position: absolute;
  left: 28rpx;
  width: 48rpx;
  height: 48rpx;
  padding: 20rpx;
}

/* 标题 */
.nav-title {
  font-size: 34rpx;
  color: #000;
  font-weight: 500;
}

/* 货币列表 */
.currency-list {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-radius: 32rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.08),
              0 2rpx 6rpx rgba(0, 0, 0, 0.03);
  border: 1px solid rgba(230, 230, 230, 0.7);
  overflow: hidden;
}

.currency-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 40rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.currency-item:last-child {
  border-bottom: none;
}

.currency-item:active {
  background: #f8f9fd;
}

.currency-item.selected {
  background: #f0f4ff;
}

.currency-label {
  font-size: 32rpx;
  color: #202124;
  font-weight: 500;
}

